class QuickSort {
	public static void main(String[] args) {
		SortClass sort;
		sort = new SortClass();
		int[] input;
		int[] results;
		input = new int[10];
		
		input[0] = 25;
		input[1] = 14;
		input[2] = 57;
		input[3] = 23;
		input[4] = 0;
		input[5] = 24;
		input[6] = 6;
		input[7] = 24;
		input[8] = 45;
		input[9] = 130;
		
		results = sort.sort(input);
		int i;
		i = 0;
		while (i < 10) {
			System.out.println("I = " + i);
			System.out.println("X = " + results[i]);
			i = i + 1;
		}
	}

}

class SortClass {
	int[] array;
	int length;
	
	public int[] sort(int[] inputArray) {
		this.array = inputArray;
		this.length = inputArray.length;
		quickSort(0, this.length - 1);
		return this.array;
	}
	
	public int quickSort(int lowerIndex, int higherIndex) {
		int i;
		int j;
		i = lowerIndex;
		j = higherIndex;
		
		int pivot;
		pivot = array[lowerIndex + (higherIndex-lowerIndex)/2];
		
		while (i < (j+1)) {
			while (this.array[i] < pivot) {
				i = i + 1;
			}
			while (pivot < this.array[j]) {
				j = j - 1;
			}
			if (i < (j + 1)) {
				exchangeNumbers(i, j);
				i = i + 1;
				j = j - 1;
			}
		}
		
		if (lowerIndex < j) {
			quickSort(lowerIndex, j);
		}
		if (i < higherIndex) {
			quickSort(i, higherIndex);
		}
		return 0;
	}
	
	public int exchangeNumbers(int i, int j) {
		int temp;
		temp = array[i];
		array[i] = array[j];
		array[j] = temp;
		return 0;
	}
}
